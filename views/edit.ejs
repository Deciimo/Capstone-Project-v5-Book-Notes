<h2>Edit Book</h2>
<form action="/edit/<%= book.id %>" method="post">
    <label for="title">Title:</label>
    <input type="text" id="title" name="title" value="<%= book.title %>" required>

    <!-- Add other form fields for book_cover, description_text, date, and score -->
    <label for="date">Date</label>
    <input type="text" id="date" name="date" value="<%= book.date %>" required>
    <br>

    <label for="book_cover">Cover URL</label>
    <input type="text" id="book_cover" name="book_cover" value="<%= book.book_cover %>" required>
    <br>

    <label for="description_text">Description</label>
    <br>
    <textarea id="description_text" name="description_text" rows="4" cols="50" value="<%= book.description_text %>" required></textarea>
    <br>

    <label for="score">Review</label>
    <select id="score" name="score" value="<%= book.score %>" required>
        <!-- Creating options for numbers 1 to 10 -->
        <% for (let i = 1; i <= 10; i++) { %>
            <option value="<%= i %>"><%= i %></option>
        <% } %>
    </select>
    <br>

    <button type="submit">Update</button>
</form>